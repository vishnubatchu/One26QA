            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SVP__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(VP__c &lt;&gt; SVP__c, OR(
 Loaner__r.Loaner_Duration_In_Days__c &gt; 180,
Loaner__r.Loaner_Total__c &gt; 3000 
) )</formula>
